
<div class="container">
  <div class="row text-center">
    <h3>Add a new cocktail</h3>
  </div>
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <div class="card">
        <div>
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.error_notification %>

            <%= f.input :name %>
            <%= f.input :picture %>

            <%= f.button :submit, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
